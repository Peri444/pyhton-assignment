l= []
Even_count = 0
N= int(input("Please enter the Total Number of List Elements: "))
for i in range(1,N+ 1):
    value= int(input("Enter any number"))
    l.append(value)
for j in range(N):
    if(l[j] % 2 == 0):
        Even_count = Even_count + 1

print("\nTotal Number of Even Numbers in this List =  ", Even_count)
